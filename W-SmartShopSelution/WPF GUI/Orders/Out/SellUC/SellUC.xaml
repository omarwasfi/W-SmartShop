<UserControl x:Class="WPF_GUI.Sell.SellUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_GUI.Sell"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:wpfViewer="schemas-stimulsoft-com:wpf-viewer"
             d:DesignHeight="680" d:DesignWidth="1343">
    <Grid>

        <Grid Name="PrintGrid_SellUC" Visibility="Collapsed" >

            <Button x:Name="BackToNormalGridButton_SellUC" Click="BackToNormalGridButton_SellUC_Click" Visibility="Visible" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Green"   VerticalAlignment="Top"  Margin="10,4,1277,0" Height="25"  >
                <materialDesign:PackIcon Kind="ArrowLeft" Width="20" Height="20"/>
            </Button>

            <wpfViewer:StiWpfViewerControl Name="SellOrderReportPrint_SellUC" HorizontalAlignment="Left" Height="651" Margin="0,29,0,0" VerticalAlignment="Top" Width="1343"/>
        </Grid>

        <Grid Name="UserGrid_SellUC" Visibility="Visible" >
            <Grid Margin="1117,0,0,651">
                <Button x:Name="CloseTabButton_SellUC" Visibility="Collapsed" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Red"   VerticalAlignment="Top"  Margin="3,0,170,0" Height="25"  >
                    <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                </Button>

                <Button x:Name="ReloadTabButton_SellUC" Click="ReloadTabButton_SellUC_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Gray"   VerticalAlignment="Top"  Margin="171,0,0,0" Height="25"  >
                    <materialDesign:PackIcon Kind="Reload" Width="20" Height="20"/>
                </Button>

                <Button x:Name="PrintButton_SellUC" Click="PrintButton_SellUC_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Gray"   VerticalAlignment="Top"  Margin="115,0,55,0" Height="25"  >
                    <materialDesign:PackIcon Kind="Printer" Width="20" Height="20"/>
                </Button>

                <Button x:Name="ConfitmButton_SellUC" Click="ConfirmButton_UC_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Green"   VerticalAlignment="Top"  Margin="56,0,111,0" Height="25"  >
                    <materialDesign:PackIcon Kind="Done" Width="20" Height="20"/>
                </Button>

            </Grid>

            <!--<Rectangle RadiusY="8" RadiusX="8" Fill="White"/>-->

            <DataGrid x:Name="ChoosenProductList_Sell" IsReadOnly="True" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="277" Margin="10,333,0,0" VerticalAlignment="Top" Width="1323" Background="LightGray">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product Name" Binding="{Binding Path=Product.Name}" />
                    <DataGridTextColumn Header="Barcode" Binding="{Binding Path=Product.BarCode}" />
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Path=Quantity}" />
                    <DataGridTextColumn Header="Price" Binding="{Binding Path=SalePrice}"/>
                    <DataGridTextColumn Header="Discount" Binding="{Binding Path=Discount}"/>
                    <DataGridTextColumn Header="Profit" Binding="{Binding Path=GetProfit}"/>
                    <DataGridTextColumn Header="Total Profit" Binding="{Binding Path=GetTotalProfit}"/>
                    <DataGridTextColumn Header="Total Price" Binding="{Binding Path=TotalProductPrice}"/>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="1117,624,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Total Price : "/></TextBlock>
            <TextBox x:Name="TotalPriceValue_Sell" IsReadOnly="True" HorizontalAlignment="Left" Height="22" Margin="1249,634,0,0" Text="" VerticalAlignment="Top" Width="78" RenderTransformOrigin="0.544,-0.652" MaxLines="1"/>

            <Button x:Name="RemoveSelectedProductButton_Sell" Click="RemoveSelectedProductButton_Sell_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Red"  Margin="10,610,1078,0" VerticalAlignment="Top" Height="60"  >
                <Grid Width="229">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="42*"/>
                    </Grid.RowDefinitions>
                    <materialDesign:PackIcon Kind="RemoveCircle" Width="50" Height="46" Grid.RowSpan="2"/>
                    <TextBlock FontSize="20" Text="Remove Selected" Margin="50,5,10,10" Grid.Row="1"/>
                </Grid>
            </Button>

            <GroupBox Header="Choose Product" HorizontalAlignment="Left" Height="299" Margin="10,29,0,0" VerticalAlignment="Top" Width="863">
                <Grid Width="863" Height="253" VerticalAlignment="Top" Margin="0,0,0,-6" >
                    <!-- Category comoBox & category textblock -->
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Category : "/></TextBlock>
                    <ComboBox x:Name="CategoryValue_Sell" HorizontalAlignment="Left" Margin="116,5,0,0" VerticalAlignment="Top" Width="100" IsTextSearchEnabled="True" TextSearch.TextPath="Name" SelectionChanged="FilterProductsByCategoryAndBrand"/>

                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="221,0,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" Width="82" ><Run Text="Brand : "/></TextBlock>
                    <ComboBox x:Name="BrandValue_Sell" HorizontalAlignment="Left" Margin="303,5,0,0" VerticalAlignment="Top" Width="163" IsTextSearchEnabled="True" TextSearch.TextPath="Name" SelectionChanged="FilterProductsByCategoryAndBrand"  />

                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" RenderTransformOrigin="0.596,0.438" FontSize="25" Margin="471,0,0,0" ><Run Text="Product : "/></TextBlock>
                    <ComboBox x:Name="ProductValue_Sell" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="259" Margin="581,5,0,0" SelectionChanged="ProductValue_Sell_SelectionChanged" />

                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="221,38,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Serial Number : "/></TextBlock>
                    <TextBox x:Name="SerialNumberValue_Sell" HorizontalAlignment="Left" Height="33" Margin="398,38,0,0" Text="" VerticalAlignment="Top" Width="105" KeyDown="SerialNumberValue_Sell_EventHundler" MaxLines="1" MaxLength="200" />

                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="0,38,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Barcode : "/></TextBlock>
                    <TextBox x:Name="BarCodeValue_Sell" TextChanged="BarCodeValue_Sell_TextChanged" KeyDown="BarCodeValue_Sell_KeyDown" HorizontalAlignment="Left" Height="33" Margin="109,38,0,0" Text="" VerticalAlignment="Top" Width="107" MaxLines="1" MaxLength="200"  />

                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="503,38,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Serial Number2 : "/></TextBlock>
                    <TextBox x:Name="SerialNumber2Value_Sell" HorizontalAlignment="Left" Height="33" Margin="693,38,0,0" Text="" VerticalAlignment="Top" Width="147" KeyDown="SerialNumber2Value_Sell_EventHundler" MaxLength="200" MaxLines="1" />

                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="503,114,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Quantity : "/></TextBlock>
                    <TextBox x:Name="QuantityValue_Sell"  KeyDown="QuantityValue_Sell_KeyDown" PreviewTextInput="IntergerValidation" HorizontalAlignment="Left" Height="23" Margin="617,124,0,0" Text="" VerticalAlignment="Top" Width="58" RenderTransformOrigin="0.544,-0.652" IsEnabled="False" MaxLines="1" MaxLength="10" />

                    <TextBox x:Name="PriceValue_Sell" KeyDown="PriceValue_Sell_KeyDown" PreviewTextInput="MoneyValidation"  HorizontalAlignment="Left" Height="24" Margin="256,123,0,0" Text="" VerticalAlignment="Top" Width="58" RenderTransformOrigin="0.544,-0.652" IsEnabled="False" MaxLength="10" MaxLines="1" />
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="179,114,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Price : "/></TextBlock>

                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="319,114,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Discount :"/></TextBlock>
                    <TextBox x:Name="DiscountValue_Sell"  KeyDown="DiscountValue_Sell_KeyDown" PreviewTextInput="MoneyValidation" HorizontalAlignment="Left" Height="24" Margin="428,123,0,0" Text="" VerticalAlignment="Top" Width="53" RenderTransformOrigin="0.544,-0.652" IsEnabled="False" MaxLines="1" MaxLength="10" />

                    <Button x:Name="AddProductButton_Sell" Click="AddProductButton_Sell_Click" Content="ADD" HorizontalAlignment="Left" Margin="624,173,0,0" VerticalAlignment="Top" Width="155" Height="70" FontSize="36" FontWeight="Bold"/>
                    <Button x:Name="ClearProductButton_Sell" Click="ClearProductButton_Sell_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Red"   VerticalAlignment="Top" Height="52" Margin="779,191,10,0"  >
                        <materialDesign:PackIcon Kind="Clear" Width="50" Height="46"/>
                    </Button>

                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="419,204,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Total Price : "/></TextBlock>
                    <TextBox x:Name="TotalProductPriceValue_Sell"  IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="551,214,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="66" RenderTransformOrigin="0.544,-0.652"/>

                    <TextBox x:Name="InStockValue_Sell" IsReadOnly="True" HorizontalAlignment="Left" Height="24" Margin="116,123,0,0" Text="" VerticalAlignment="Top" Width="58" RenderTransformOrigin="0.544,-0.652" IsEnabled="True" MaxLines="1" />
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="0,114,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="In Stock : "/></TextBlock>

                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="0,76,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Details : "/></TextBlock>
                    <TextBox x:Name="DetailsValue_Sell" IsReadOnly="True" HorizontalAlignment="Left" Height="33" Margin="94,76,0,0" Text="" VerticalAlignment="Top" Width="746" MaxLength="500" MaxLines="1"  />
                </Grid>

            </GroupBox>
            <GroupBox Header="Customer" HorizontalAlignment="Left" Height="299" Margin="878,29,0,0" VerticalAlignment="Top" Width="455">
                <Grid>
                    <Button x:Name="NewCustomerButton_Sell" Click="NewCustomerButton_Sell_Click" Content="New Customer" HorizontalAlignment="Left" Margin="284,197,0,0" VerticalAlignment="Top" Width="143" Height="40" FontSize="15" FontWeight="Bold"/>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="10,10,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" Width="133" Text="Full Name : " />
                    <TextBox x:Name="CustomerNameValue_Sell" TextChanged="CustomerNameValue_Sell_TextChanged" KeyDown="CustomerNameValue_Sell_KeyDown" HorizontalAlignment="Left" Margin="224,18,0,0" VerticalAlignment="Top" Width="203" MaxLines="1" MaxLength="100" />
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="10,48,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" Width="193" Text="Phone Number : " />
                    <TextBox x:Name="PhoneNumberValue_Sell" TextChanged="PhoneNumberValue_Sell_TextChanged" KeyDown="PhoneNumberValue_Sell_KeyDown" HorizontalAlignment="Left" Height="23" Margin="224,58,0,0" Text="" VerticalAlignment="Top" Width="203" MaxLines="1" MaxLength="200"/>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="10,86,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" Width="209" Text="National Number : " />
                    <TextBox x:Name="NationalNumberValue_Sell" KeyDown="NationalNumberValue_Sell_KeyDown" TextChanged="NationalNumberValue_Sell_TextChanged" HorizontalAlignment="Left" Margin="224,94,0,0" VerticalAlignment="Top" Width="203" MaxLength="200" MaxLines="1" />

                    <Button x:Name="SelectedCustomerLogButton_Sell" Click="SelectedCustomerLogButton_Sell_Click" Content="Selected Customer log" HorizontalAlignment="Left" Margin="10,152,0,0" VerticalAlignment="Top" Width="193" Height="40" FontSize="15" FontWeight="Bold"/>
                    <Button x:Name="ClearCustomerButton_Sell" Click="ClearCustomerButton_Sell_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Red"   VerticalAlignment="Top" Height="50" Margin="353,142,10,0"  >
                        <materialDesign:PackIcon Kind="Clear" Width="50" Height="46"/>
                    </Button>

                </Grid>
            </GroupBox>

            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="270,624,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Details : "/></TextBlock>
            <TextBox x:Name="OrderDetailsValue_Sell" HorizontalAlignment="Left" Height="32" Margin="364,625,0,0" Text="" VerticalAlignment="Top" Width="534" MaxLength="500" MaxLines="1"  />

            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="903,624,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Total Profit : "/></TextBlock>
            <TextBox x:Name="TotalOrderProfitValue_Sell"  IsReadOnly="True" HorizontalAlignment="Left" Height="24" Margin="1046,633,0,0" Text="" VerticalAlignment="Top" Width="66" RenderTransformOrigin="0.544,-0.652" MaxLines="1"/>

        </Grid>
        
        
    </Grid>
</UserControl>
