<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_GUI.Orders.Out.OrderUC"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:wpfViewer="schemas-stimulsoft-com:wpf-viewer" x:Class="WPF_GUI.Orders.Out.OrderUC.OrderUC"
             mc:Ignorable="d" 
             d:DesignHeight="680" d:DesignWidth="1343">
    <Grid>
        <Grid Name="UserGrid_OrderUC" Visibility="Visible">
            <DataGrid x:Name="OrderProductList_OrderUC" IsReadOnly="True" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="321" Margin="10,289,0,0" VerticalAlignment="Top" Width="1323" Background="LightGray">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product Name" Binding="{Binding Product.Name}" />
                    <DataGridTextColumn Header="Barcode" Binding="{Binding Product.BarCode}" />
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" />
                    <DataGridTextColumn Header="Price" Binding="{Binding SalePrice}"/>
                    <DataGridTextColumn Header="Discount" Binding="{Binding Discount}"/>
                    <DataGridTextColumn Header="Profit" Binding="{Binding GetProfit}"/>
                    <DataGridTextColumn Header="Total Profit" Binding="{Binding GetTotalProfit}"/>
                    <DataGridTextColumn Header="Total Price" Binding="{Binding TotalProductPrice}"/>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="10,10,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Order : "/></TextBlock>
            <TextBox x:Name="OrderIdValue_OrderUC" IsReadOnly="True" HorizontalAlignment="Left" Height="33" Margin="98,10,0,0" Text="" VerticalAlignment="Top" Width="65" MaxLength="500" MaxLines="1"  />

            <GroupBox Header="Customer" HorizontalAlignment="Left" Height="250" Margin="878,34,0,0" VerticalAlignment="Top" Width="455">
                <Grid Margin="0,0,0,1">
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="10,10,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" Width="133" Text="Full Name : " />
                    <TextBox x:Name="CustomerNameValue_OrderUC" IsReadOnly="True" HorizontalAlignment="Left" Margin="224,18,0,0" VerticalAlignment="Top" Width="203" MaxLines="1" MaxLength="100" />

                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="10,48,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" Width="193" Text="Phone Number : " />
                    <TextBox Name="CustomerPhoneNumberValue_OrderUC" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="224,58,0,0" Text="" VerticalAlignment="Top" Width="203" MaxLines="1" MaxLength="200"/>

                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="10,86,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" Width="209" Text="National Number : " />
                    <TextBox x:Name="CustomerNationalNumberValue_OrderUC" IsReadOnly="True"  HorizontalAlignment="Left" Margin="224,94,0,0" VerticalAlignment="Top" Width="203" MaxLength="200" MaxLines="1" />

                    <Button x:Name="SelectedCustomerLogButton_OrderUC" Content="Selected Customer log" HorizontalAlignment="Left" Margin="10,152,0,0" VerticalAlignment="Top" Width="193" Height="40" FontSize="15" FontWeight="Bold"/>

                </Grid>
            </GroupBox>
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="12,119,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Total Price : "/></TextBlock>
            <TextBox x:Name="TotalPriceValue_OrderUC" IsReadOnly="True" HorizontalAlignment="Left" Height="22" Margin="148,130,0,0" Text="" VerticalAlignment="Top" Width="78" RenderTransformOrigin="0.544,-0.652" MaxLines="1"/>

            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="12,157,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Total Profit : "/></TextBlock>
            <TextBox x:Name="TotalOrderProfitValue_OrderUC"  IsReadOnly="True" HorizontalAlignment="Left" Height="24" Margin="154,166,0,0" Text="" VerticalAlignment="Top" Width="72" RenderTransformOrigin="0.544,-0.652" MaxLines="1"/>

            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="10,238,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Details : "/></TextBlock>
            <TextBox x:Name="OrderDetailsValue_OrderUC"  HorizontalAlignment="Left" Height="32" Margin="109,238,0,0" Text="" VerticalAlignment="Top" Width="764" MaxLength="500" MaxLines="1"  />

            <Button x:Name="RemoveSelectedProductButton_OrderUC" Click="RemoveSelectedProductButton_OrderUC_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Red"  Margin="10,615,1078,0" VerticalAlignment="Top" Height="60"  >
                <Grid Width="229">
                    <materialDesign:PackIcon Kind="RemoveCircle" Width="50" Height="46" Grid.RowSpan="2"/>
                    <TextBlock FontSize="20" Text="Remove Selected" Margin="50,5,10,10" Grid.Row="1"/>
                </Grid>
            </Button>
            <Grid Margin="1117,0,0,651">
                <Button x:Name="DeleteOrderButton_OrderUC" Click="DeleteOrderButton_OrderUC_Click" Visibility="Visible" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Red"   VerticalAlignment="Top"  Margin="3,0,170,0" Height="25"  >
                    <materialDesign:PackIcon Kind="Delete" Width="20" Height="20"/>
                </Button>

                <Button x:Name="ReloadTabButton_OrderUC" Visibility="Collapsed" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Gray"   VerticalAlignment="Top"  Margin="171,0,0,0" Height="25"  >
                    <materialDesign:PackIcon Kind="Reload" Width="20" Height="20"/>
                </Button>

                <Button x:Name="PrintButton_OrderUC" Click="PrintButton_OrderUC_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Gray"   VerticalAlignment="Top"  Margin="115,0,55,0" Height="25"  >
                    <materialDesign:PackIcon Kind="Printer" Width="20" Height="20"/>
                </Button>

                <Button x:Name="ConfitmButton_OrderUC" Click="ConfitmButton_OrderUC_Click"  Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Green"   VerticalAlignment="Top"  Margin="56,0,111,0" Height="25"  >
                    <materialDesign:PackIcon Kind="Done" Width="20" Height="20"/>
                </Button>

            </Grid>
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="412,124,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Total Price after changes : "/></TextBlock>
            <TextBox x:Name="TotalPriceAfterChangesValue_OrderUC" IsReadOnly="True" HorizontalAlignment="Left" Height="22" Margin="704,130,0,0" Text="" VerticalAlignment="Top" Width="78" RenderTransformOrigin="0.544,-0.652" MaxLines="1"/>

            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="412,162,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Total Profit after changes : "/></TextBlock>
            <TextBox x:Name="TotalOrderProfitAfterChangesValue_OrderUC"  IsReadOnly="True" HorizontalAlignment="Left" Height="24" Margin="710,166,0,0" Text="" VerticalAlignment="Top" Width="66" RenderTransformOrigin="0.544,-0.652" MaxLines="1"/>

            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="412,200,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Customer should receive : "/></TextBlock>
            <TextBox x:Name="CustomerShouldReceiveValue_OrderUC" IsReadOnly="True" HorizontalAlignment="Left" Height="22" Margin="704,211,0,0" Text="" VerticalAlignment="Top" Width="78" RenderTransformOrigin="0.544,-0.652" MaxLines="1"/>

            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="412,10,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Staff member : "/></TextBlock>
            <TextBox x:Name="StaffNameValue_OrderUC" IsReadOnly="True" HorizontalAlignment="Left" Height="33" Margin="585,10,0,0" Text="" VerticalAlignment="Top" Width="141" MaxLength="500" MaxLines="1"  />

            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="10,48,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Date : "/></TextBlock>
            <TextBox x:Name="OrderDateValue_OrderUC" IsReadOnly="True" HorizontalAlignment="Left" Height="33" Margin="86,48,0,0" Text="" VerticalAlignment="Top" Width="141" MaxLength="500" MaxLines="1"  />
            
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Foreground="#707070" Margin="412,48,0,0" RenderTransformOrigin="0.596,0.438" FontSize="25" ><Run Text="Store : "/></TextBlock>
            <TextBox x:Name="StoreNameValue_OrderUC" IsReadOnly="True" HorizontalAlignment="Left" Height="33" Margin="585,48,0,0" Text="" VerticalAlignment="Top" Width="141" MaxLength="500" MaxLines="1"  />

        </Grid>

        <Grid Name="PrintingGrid_OrderUC" Visibility="Collapsed">
            <Button x:Name="BackToNormalGridButton_OrderUC" Click="BackToNormalGridButton_OrderUC_Click" Visibility="Visible" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Green"   VerticalAlignment="Top"  Margin="10,4,1277,0" Height="25"  >
                <materialDesign:PackIcon Kind="ArrowLeft" Width="20" Height="20"/>
            </Button>

            <wpfViewer:StiWpfViewerControl Name="SellOrderReportPrint_OrderUC" HorizontalAlignment="Left" Height="651" Margin="0,29,0,0" VerticalAlignment="Top" Width="1343"/>
        </Grid>

    </Grid>
</UserControl>
